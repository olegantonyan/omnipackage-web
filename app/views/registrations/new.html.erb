<h1>Sign up</h1>

<div class="row">

  <div class="col">
    <%= form_with(url: sign_up_path) do |form| %>
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, required: true, autocomplete: "new-password", class: "form-control" %>
        <div class="invalid-feedback">
          <%= @user.errors.full_messages %>
        </div>
        <div><%= ::User::PASSWORD_MIN_LENGTH %> characters minimum.</div>
      </div>

      <div class="mb-3">
        <%= form.label :password_confirmation, class: "form-label" %>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div>
        <%= form.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="col">
  </div>
</div>
