<div class="row">
  <div class="col">
    <h1>Projects</h1>
  </div>

  <div class="col text-end">
    <%= link_to 'Create new project', new_project_path, class: 'btn btn-outline-primary' %>
  </div>
</div>

<% @projects.each do |project| %>
  <div class="card">
    <div class="card-header">
      <%= project.name %>
    </div>

    <div class="card-body">
      <h5 class="card-title"><%= project.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= project.name %></h6>
      <p class="card-text">
        <%= link_to 'More', project_path(project.id), class: 'card-link' %>
      </p>
    </div>
  </div>
  <br>
<% end %>
