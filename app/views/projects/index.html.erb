<div class="row">
  <div class="col-9">
    <h1>Projects</h1>
  </div>

  <div class="col-3 text-end">
    <%= link_to 'Create new project', new_project_path, class: 'btn btn-outline-primary' %>
  </div>
</div>

<% @projects.each do |project| %>
  <div class="card">
    <div class="card-header">
      <%= project.name %>
    </div>

    <div class="card-body">
      <div class="card-text">
        <p>
          <span class="badge bg-secondary"><%= project.sources_kind %></span>
          <span class="font-monospace"><%= project.sources_location %></span>
        </p>

        <%= link_to 'More', project_path(project.id), class: 'card-link' %>
      </div>
    </div>
  </div>
  <br>
<% end %>
