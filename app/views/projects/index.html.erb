<div class="row">
  <div class="col">
    <h1>Projects</h1>
  </div>

  <div class="col text-end">
    <%= link_to 'Create new project', new_project_path, class: 'btn btn-primary' %>
  </div>
</div>

<% @projects.each do |project| %>
  <div class="card">
    <div class="card-body">
      <%= project.name %>
    </div>
  </div>
<% end %>
