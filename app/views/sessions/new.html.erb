<h1>Sign in</h1>

<div class="row">

  <div class="col">
    <%= form_with(url: sign_in_path) do |form| %>
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, value: params[:email_hint], autofocus: true, required: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, required: true, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div>
        <%= form.submit "Sign in", class: "btn btn-primary" %>
      </div>
    <% end %>

    <br />
    <div>
      Don't have an account? <%= link_to "Sign up", sign_up_path %> |
      <%= link_to "Forgot your password?", new_identity_password_reset_path %>
    </div>
  </div>

  <div class="col">
  </div>

</div>
